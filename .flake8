# Flake8 Configuration
# Note: flake8 doesn't support pyproject.toml yet

[flake8]
max-line-length = 88
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    migrations,
    build,
    dist,
    .eggs,
    *.egg-info,
    .tox,
    .mypy_cache,
    .pytest_cache

# Ignore specific errors
ignore = E203,E266,E501,W503,W504,E402

per-file-ignores =
    __init__.py:F401,F403
    config/settings.py:E501

# McCabe complexity
max-complexity = 10

# Enable specific checks
select = B,C,E,F,W,T4,B9

# Docstring checks
docstring-convention = google
