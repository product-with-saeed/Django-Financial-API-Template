# ============================================================================
# Django Financial API - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in the values
# Command: cp .env.example .env
#
# SECURITY: Never commit .env file to version control!
# ============================================================================

# ============================================================================
# Django Core Settings
# ============================================================================

# SECRET_KEY - REQUIRED
# Generate a new secret key with:
# python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-change-this-in-production

# DEBUG - Set to True only in development
# SECURITY WARNING: Never set DEBUG=True in production!
DEBUG=True

# ALLOWED_HOSTS - Comma-separated list of allowed hostnames
# Example: localhost,127.0.0.1,yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================================================
# Security Settings (Production)
# ============================================================================

# Enable HTTPS redirect in production
SECURE_SSL_REDIRECT=False

# HSTS Settings (in seconds, 0 disables HSTS)
# Production recommended: 31536000 (1 year)
SECURE_HSTS_SECONDS=0

# CSRF Trusted Origins - Comma-separated list
# Example: https://yourdomain.com,https://api.yourdomain.com
CSRF_TRUSTED_ORIGINS=

# ============================================================================
# Database Configuration
# ============================================================================

# Development (SQLite)  - Default configuration in settings.py

# Production (PostgreSQL) - Uncomment and configure for production
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=financial_api
# DB_USER=postgres
# DB_PASSWORD=your-db-password
# DB_HOST=localhost
# DB_PORT=5432

# ============================================================================
# Email Configuration (Optional)
# ============================================================================

# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# ============================================================================
# Redis Configuration (For Caching & Celery)
# ============================================================================

# REDIS_URL=redis://localhost:6379/0
# CELERY_BROKER_URL=redis://localhost:6379/1

# ============================================================================
# Third-Party Services (Optional)
# ============================================================================

# Sentry Error Tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# ENVIRONMENT=development

# ============================================================================
# Django Settings
# ============================================================================

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
DJANGO_LOG_LEVEL=INFO

# ============================================================================
# JWT Configuration (Optional - Override defaults)
# ============================================================================

# JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
# JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# ============================================================================
# Development Tools
# ============================================================================

# Enable Django Debug Toolbar in development
# ENABLE_DEBUG_TOOLBAR=True
